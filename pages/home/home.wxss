/* 页面整体布局 */
.container {
  padding: 20px;
  background-color: #f5f5f5; /* 浅灰背景 */
  min-height: 100vh; /* 确保背景填充整个页面 */
  box-sizing: border-box;
  display: flex;
  flex-direction: column; /* 保持页面整体从上到下的布局 */
}

/* 顶部个人信息区域 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}
.user-info {
  display: flex;
  align-items: center;
}
.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%; /* 圆形头像 */
  margin-right: 10px;
}
.nickname {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}
.auth-button {
  margin-top: 5px;
  font-size: 12px;
  color: #007aff;
  border: 1px solid #007aff;
  padding: 2px 6px;
  border-radius: 4px;
}
.visa-count {
  font-size: 14px;
  color: #666;
}

/* 签证卡片区域 */
.visa-list {
  display: flex;
  flex-direction: column;
  gap: 15px; /* 卡片之间的间距 */
  margin-top: 20px; /* 与顶部信息区域的间距 */
  flex-grow: 1; /* 卡片区域扩展填充剩余空间 */
  width: 100%;
}
.visa-card {
  position: relative;
  background-color: #ffffff;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 阴影效果 */
  padding: 20px;
  box-sizing: border-box;
  display: grid;
  grid-template-areas: 
    "top-left top-right"
    "bottom-left bottom-right";
  grid-template-columns: 1fr 1fr;
  grid-template-rows: auto auto;
  gap: 10px; /* 内部区域间距 */
}
.card-top-left {
  grid-area: top-left;
}
.card-top-right {
  grid-area: top-right;
  text-align: right; /* 内容右对齐 */
}
.card-bottom-left {
  grid-area: bottom-left;
}
.card-bottom-right {
  grid-area: bottom-right;
  text-align: right; /* 内容右对齐 */
}

.country {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}
.visa-type {
  font-size: 14px;
  color: #666;
  margin-top: 4px;
}
.status-valid {
  font-size: 14px;
  color: #4caf50; /* 绿色，表示有效 */
  font-weight: bold;
}
.status-expiring {
  font-size: 14px;
  color: #f44336; /* 红色，表示即将过期 */
  font-weight: bold;
}
.label {
  font-size: 12px;
  color: #999;
}
.value {
  font-size: 14px;
  font-weight: bold;
  color: #333;
}

/* 悬浮按钮 */
.add-visa-btn {
  position: fixed;
  right: 20px;
  bottom: 20px;
  width: 60px;
  height: 60px;
  background-color: #007aff;
  color: #fff;
  font-size: 30px;
  border-radius: 50%; /* 圆形按钮 */
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); /* 阴影效果 */
  z-index: 100; /* 确保悬浮按钮在最上层 */
  border: none;
}

/* 弹窗表单 */
.modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  z-index: 101;
  width: 90%; /* 弹窗宽度 */
  max-width: 400px; /* 限制最大宽度 */
  box-sizing: border-box;
}
.form {
  display: flex;
  flex-direction: column;
  gap: 10px;
}
.form-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}
